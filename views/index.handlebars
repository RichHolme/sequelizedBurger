
<div class="container">

  <h1>Burgers!</h1>

  <div class="row">

    <div id="burgerContainer" class="col-md-12">

      <div id = notDevoured>

        
          <h2>Burgers that aren't devoured!</h2>

          <div class="list">

            <ol>
              {{#each burgers}}
                {{#unless devoured}}
                  <li>
                    <img src=/assets/img/burger.jpg alt="burger" height="55" width="60">
                    {{this.burger_name}}
                    <button id = {{this.id}} class = "btn btn-default devourBtn">Devour</button>
                  </li>
                {{/unless}}
              {{/each}}
            </ol>

          </div>

        

      </div>

      <div id = "devoured">

        <h2>Burgers that are devoured!</h2>

        <div class="list">

          <ol>
            {{#each burgers}}
              {{#if devoured}}
                <li>
                  <img src=/assets/img/burger.jpg alt="burger" height="55" width="60">
                  {{this.burger_name}}
                </li>
              {{/if}}
            {{/each}}
          </ol>

        </div>

      </div> 

    </div>

  </div>

  <div id="newBurger">

    <div>

      <h2>Add a burger</h2>

      <form class="create-form">

        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="name" name="name">

          <button id="submitBtn" class="btn btn-default" type="submit">Add Burger</button>
        </div>

      </form>

    </div>

  </div>

</div>